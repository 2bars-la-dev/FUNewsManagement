@page "{id}"
@model WebClient.Pages.Articles.UpdateModel
@using WebClient.Models

@{
    ViewData["Title"] = "Update Article";
}

<h2>Update Article</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Article.NewsTitle" class="form-label"></label>
        <input asp-for="Article.NewsTitle" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Article.Headline" class="form-label"></label>
        <input asp-for="Article.Headline" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Article.NewsContent" class="form-label"></label>
        <textarea asp-for="Article.NewsContent" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Article.NewsSource" class="form-label"></label>
        <input asp-for="Article.NewsSource" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Article.CategoryId" class="form-label"></label>
        <select asp-for="Article.CategoryId" class="form-select">
            <option value="">-- Select Category --</option>
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.CategoryId" selected="@(Model.Article.CategoryId == cat.CategoryId)">
                    @cat.CategoryName
                </option>
            }
        </select>
    </div>

    <div class="form-check mb-3">
        <input type="hidden" name="Article.NewsStatus" value="false" />
        <input class="form-check-input" type="checkbox" name="Article.NewsStatus" value="true"
        @(Model.Article.NewsStatus == true ? "checked" : "") />
        <label class="form-check-label">Is Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
